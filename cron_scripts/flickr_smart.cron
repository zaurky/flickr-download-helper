#!/bin/sh

export LANG='fr_FR.UTF-8'
. /etc/fdh/fdh.sh

OPTIONS=" -d -r --smart --since last1h"

if [ "x$DISABLE" == "x" ] && [ -d '/mnt/olivier/photo_flickr_download_helper/' ]; then
